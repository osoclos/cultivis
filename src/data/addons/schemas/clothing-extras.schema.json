{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "clothing-extras.schema.json",

    "title": "Clothing Extras",
    "description": "Additional information on clothing items that add/replaces metadata to .dat files in the extracted/clothing folder",

    "type": "object",
    "propertyNames": { "$ref": "#/definitions/Id" },
    "additionalProperties": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The display name of this clothing item"
            },

            "category": {
                "type": "integer",
                "description": "The category index in the tailor selection menu which this clothing item belongs to",

                "minimum": 0,
                "maximum": 2
            },

            "variants": {
                "type": "array",
                "description": "Additional variants that are added onto this clothing item's original variants",

                "items": { "type": "string" }
            }
        }
    },

    "definitions": {
        "Id": {
            "type": "string",
            "enum": ["Default_Clothing", "Normal9_Clothing", "Normal8_Clothing", "Normal7_Clothing", "Normal6_Clothing", "Normal5_Clothing", "Normal4_Clothing", "Normal3_Clothing", "Normal2_Clothing", "Normal1_Clothing", "Normal12_Clothing", "Normal11_Clothing", "Normal10_Clothing", "Naked_Clothing", "Rags", "Temple Robes", "Missionary", "Undertaker", "Holiday", "Old", "Baby", "Warrior_Clothing", "Special_7_Clothing", "Special_6_Clothing", "Special_5_Clothing", "Special_4_Clothing", "Special_3_Clothing", "Special_2_Clothing", "Special_1_Clothing", "Fancy_Suit_Clothing", "Fancy_Clothing", "Baal_Robes", "Aym_Robes", "Sozo_Backpack", "Heretic_DLC_Clothing", "Heretic_DLC_Clothing2", "DLC_6", "DLC_5", "DLC_4", "DLC_3", "DLC_2", "DLC_1", "Cultist_DLC_Clothing", "Cultist_DLC_Clothing2", "Pilgrim_DLC_Clothing", "Pilgrim_DLC_Clothing2"]
        }
    }
}